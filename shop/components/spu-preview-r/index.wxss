/* components/spu-preview/index.wxss */
.container {
  width: 340rpx;
  display: flex;
  flex-direction: column;
  box-shadow: 0px 0px 8px 0px rgba(119, 163, 149, 0.2);
  margin-bottom: 30rpx;
  background-color: white;
}
.content-container {
  display: flex;
  flex-direction: column;
  padding: 10px 10px 10px 10px;
}
.img {
  width: 100%;
  height: 340rpx;
}
.l-tag {
  background-color: #DCEBE6 !important;
  color: #157658 !important;
  margin-right: 10rpx;
}
.title {
  font-size: 28rpx;
  color: #333333;
}
.price-row {
  display: flex;
  flex-direction: row;
}
.discount-price {
  margin-left: 20rpx;
}
.tags {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
.subtitle {
  font-size: 24rpx;
  font-weight: 300;
  margin-top: 6rpx;
  color: #333;
}