  background-color: #ffffff;
  padding: 34rpx 40rpx 26rpx 30rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.left{
  flex: 1;
  display: flex;
  flex-direction: column;
}
.subtitle{
  color: #999999;
  font-size: 28rpx;
  font-weight: 400;
  margin-top: 40rpx;
  margin-bottom: 16rpx;
}
.price-now{  
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
.l-price-unit{
  margin-right: 14rpx !important;
}
.tags {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
.l-tag {
  background-color: #DCEBE6 !important;
  color: #157658 !important;
  margin-right: 10rpx;
}
