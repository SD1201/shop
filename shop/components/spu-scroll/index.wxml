  <image class="title" src="{{theme.title_img}}"></image>
  <scroll-view class="scroll-view" scroll-x>
    <view class="inner">
      <block wx:for="{{spuList}}">
        <view class="spu-container">
          <image class="spu-img" src="{{item.img}}"></image>
          <text class="spu-text">{{item.title.length>=8?s.substring(item.title,0,7)+'...':item.title}}</text>
          <l-price autofix l-value-class="price-value" l-unit-class="price-unit" color="#157658" unit="Â¥" value="{{p.mainPrice(item.price,item.discount_price)}}"></l-price>
          
        </view>
      </block>
    </view>
  </scroll-view>
</view>

